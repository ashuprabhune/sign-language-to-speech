// August 17, 2014
    // Public Domain
    #include<Wire.h>
    const int MPU_addr=0x68;  // I2C address of the MPU-6050
    int16_t AcX,AcY,AcZ,Tmp,GyX,GyY,GyZ;

    #define NUM_DIMENSIONS 3
    void setup(){
      Wire.begin();
      Wire.beginTransmission(MPU_addr);
      Wire.write(0x6B);  // PWR_MGMT_1 register
      Wire.write(0);     // set to zero (wakes up the MPU-6050)
      Wire.endTransmission(true);
      Serial.begin(9600);
    }
    void loop(){
      Wire.beginTransmission(MPU_addr);
      Wire.write(0x3B);  // starting with register 0x3B (ACCEL_XOUT_H)
      Wire.endTransmission(false);
      Wire.requestFrom(MPU_addr,14,true);  // request a total of 14 registers

      float dimensions[NUM_DIMENSIONS]={0.0};
      dimensions[0]=(Wire.read()<<8|Wire.read())/1000.0;  // 0x3B (ACCEL_XOUT_H) & 0x3C (ACCEL_XOUT_L)    
      dimensions[1]=(Wire.read()<<8|Wire.read())/1000.0;  // 0x3D (ACCEL_YOUT_H) & 0x3E (ACCEL_YOUT_L)
      dimensions[2]=(Wire.read()<<8|Wire.read())/1000.0;  // 0x3F (ACCEL_ZOUT_H) & 0x40 (ACCEL_ZOUT_L)
      Tmp=Wire.read()<<8|Wire.read();  // 0x41 (TEMP_OUT_H) & 0x42 (TEMP_OUT_L)
     //ions[3]=(Wire.read()<<8|Wire.read())/1000.0;  // 0x43 (GYRO_XOUT_H) & 0x44 (GYRO_XOUT_L)
     //imensions[4]=(Wire.read()<<8|Wire.read())/1000.0;  // 0x45 (GYRO_YOUT_H) & 0x46 (GYRO_YOUT_L)
     //imensions[5]=(Wire.read()<<8|Wire.read())/1000.0;  // 0x47 (GYRO_ZOUT_H) & 0x48 (GYRO_ZOUT_L)

     //imensions[6]=map(analogRead(A0), 240, 550, 0, 100);
   // dimensions[7]=map(analogRead(A1), 240, 550, 0, 100);
    //dimensions[8]=map(analogRead(A2), 240, 550, 0, 100);
    //dimensions[9]=map(analogRead(A3), 240, 550, 0, 100);
   //   dimensions[4]=map(analogRead(A4), 0, 1023, 0, 10);

      for( int i =0; i <NUM_DIMENSIONS; ++i)
      {
        Serial.print(dimensions[i]);
        if( i != NUM_DIMENSIONS-1)
        Serial.print(",");
      }
      Serial.println();
      
      delay(50);
    }


    //Serial.print(" | Tmp = "); Serial.print(Tmp/340.00+36.53);  //equation for temperature in degrees C from datasheet
      //Serial.print(" | GyX = "); Serial.print(GyX);
      //Serial.print(" | GyY = "); Serial.print(GyY);
      //Serial.print(" | GyZ = "); Serial.println(GyZ);
      
